<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Redirigir favicon.ico a /img/2.png
  RewriteRule ^favicon\.ico$ /img/2.png [L]
  
  # No reescribir archivos o directorios que existen
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # No reescribir rutas de la API
  RewriteCond %{REQUEST_URI} !^/api
  
  # Redirigir todo a index.html
  RewriteRule . /index.html [L]
</IfModule>

# Configurar MIME types correctos
<IfModule mod_mime.c>
  AddType application/manifest+json .webmanifest
  AddType image/x-icon .ico
</IfModule>
